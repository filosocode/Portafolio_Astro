---
import "../styles/global.css";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="bg-gradient-to-r from-purple-300 to-blue-200 min-h-screen flex items-center justify-center px-4">
    <!-- Añadido text-gray-900 para que todo el texto dentro del contenedor sea oscuro -->
    <div class="bg-white text-gray-900 shadow overflow-hidden sm:rounded-lg pb-8 w-full max-w-3xl text-center">
      <div class="border-t border-gray-200 pt-8 px-6">
        <h1 class="text-9xl font-bold text-purple-400">404</h1>
        <h2 class="text-4xl font-medium py-4">Oops! Página no encontrada</h2>
        <p class="text-lg pb-8 text-gray-600">
          La página que estás buscando no existe. Puede que haya sido movida o eliminada.
        </p>

        <!-- Enlaces visibles como botones, responsive y con buen contraste -->
        <div class="flex flex-col sm:flex-row justify-between items-center gap-4 mt-8 w-full px-6">
          <a
            href="/"
            class="bg-indigo-600 hover:bg-indigo-700 text-white font-semibold px-6 py-3 rounded-md text-center w-full sm:w-auto"
          >
            Volver al inicio
          </a>
          <a
            href="/contacto"
            class="bg-gray-800 hover:bg-gray-900 text-white font-semibold px-6 py-3 rounded-md text-center w-full sm:w-auto"
          >
            Contáctanos
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>
